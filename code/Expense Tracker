def add_expense(expenses, amount, category):
  #adds the amount and category to the expense list
    expenses.append({'amount': amount, 'category': category})
    
def print_expenses(expenses):
    #print out the expenses in the expense list
    for expense in expenses:
        print(f'Amount: {expense["amount"]}, Category: {expense["category"]}')
    
def total_expenses(expenses):
    #will return the sum of the expenses in the expense list
    return sum(map(lambda expense: expense['amount'], expenses))
    
def filter_expenses_by_category(expenses, category):
    #will return all expenses by category in the expense list
    return filter(lambda expense: expense['category'] == category, expenses)
    

def main():
#creates the expense list
    expenses = []   
    while True:
    #prints out the options
        print('\nExpense Tracker')
        print('1. Add an expense')
        print('2. List all expenses')
        print('3. Show total expenses')
        print('4. Filter expenses by category')
        print('5. Exit')
        #intiating input from user
        choice = input('Enter your choice: ')

        #if choice is 1 then the program will ask for inputs for amount and category then calls on the add_expense function, the amount will return as a float
        if choice == '1':
            amount = float(input('Enter amount: '))
            category = input('Enter category: ')
            add_expense(expenses, amount, category)

        #if choice is 2 then the program will print out all expenses by calling on print_expenses function
        elif choice == '2':
            print('\nAll Expenses:')
            print_expenses(expenses)

        #if choice is 3 then the program will return the total expenses by calling on total_expenses function
        elif choice == '3':
            print('\nTotal Expenses: ', total_expenses(expenses))

        #if choice is 4 then the program will return only the expense in the desired category the user inputs by calling on filter_expenses_by_category
        elif choice == '4':
            category = input('Enter category to filter: ')
            print(f'\nExpenses for {category}:')
            expenses_from_category = filter_expenses_by_category(expenses, category)
            print_expenses(expenses_from_category)

        #if choice is 5, the prgram ends
        elif choice == '5':
            print('Exiting the program.')
            break

main()
